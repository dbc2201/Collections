<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/16" fx:controller="io.github.dbc.collections.controller.StudentController">
   <children>

      <Label text="Create New Student" underline="true">
         <font>
            <Font size="24.0"/>
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="First Name">
               <font>
                  <Font size="18.0"/>
               </font>
            </Label>
            <TextField fx:id="firstNameTextField" promptText="first name">
               <HBox.margin>
                  <Insets left="8.0"/>
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Last Name">
               <font>
                  <Font size="18.0"/>
               </font>
            </Label>
            <TextField fx:id="lastNameTextField" promptText="last name">
               <HBox.margin>
                  <Insets left="8.0"/>
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <Button mnemonicParsing="false" text="create"/>
   </children>
</VBox>
